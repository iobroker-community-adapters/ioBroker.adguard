{
  "name": "iobroker.adguard",
  "version": "0.0.1",
  "description": "AdGuard Home is a network-wide ad- and tracker-blocking DNS server with parental control (adult content blocking) capabilities. The AdGuard integration allows you to control and monitor your AdGuard Home instance in ioBroker.",
  "author": {
    "name": "Dennis Rathjen",
    "email": "dennis.rathjen@outlook.de"
  },
  "homepage": "https://github.com/o0shojo0o/ioBroker.adguard",
  "license": "MIT",
  "keywords": [
    "AdGuard",
    "DNS",
    "tracker-blocking",
    "ad-blocking"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/o0shojo0o/ioBroker.adguard"
  },
  "dependencies": {
    "@iobroker/adapter-core": "^2.5.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.14.5",
    "@babel/core": "^7.14.6",
    "@babel/plugin-proposal-decorators": "^7.14.5",
    "@babel/preset-env": "^7.14.7",
    "@babel/preset-typescript": "^7.14.5",
    "@iobroker/adapter-react": "^1.6.30",
    "@iobroker/testing": "^2.4.4",
    "@material-ui/core": "^4.12.1",
    "@material-ui/icons": "^4.11.2",
    "@types/chai": "^4.2.21",
    "@types/chai-as-promised": "^7.1.4",
    "@types/gulp": "^4.0.9",
    "@types/mocha": "^8.2.3",
    "@types/node": "^16.3.1",
    "@types/proxyquire": "^1.3.28",
    "@types/react-dom": "^17.0.9",
    "@types/react": "^17.0.14",
    "@types/sinon": "^10.0.2",
    "@types/sinon-chai": "^3.2.5",
    "@typescript-eslint/eslint-plugin": "^4.28.2",
    "@typescript-eslint/parser": "^4.28.2",
    "axios": "^0.21.1",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "eslint": "^7.30.0",
    "eslint-plugin-react": "^7.24.0",
    "gulp": "^4.0.2",
    "mocha": "^9.0.2",
    "parcel-bundler": "^1.12.5",
    "proxyquire": "^2.1.3",
    "react-dom": "^16.14.0",
    "react-icons": "^4.2.0",
    "react": "^16.14.0",
    "rimraf": "^3.0.2",
    "sinon": "^11.1.1",
    "sinon-chai": "^3.7.0",
    "source-map-support": "^0.5.19",
    "ts-node": "^10.1.0",
    "typescript": "^4.3.5"
  },
  "main": "build/main.js",
  "scripts": {
    "prebuild": "rimraf ./build",
    "build:parcel": "parcel build admin/src/index.tsx -d admin/build",
    "build:ts": "tsc -p tsconfig.build.json",
    "build": "npm run build:ts && npm run build:parcel",
    "watch:parcel": "parcel admin/src/index.tsx -d admin/build",
    "watch:ts": "tsc -p tsconfig.build.json --watch",
    "watch": "npm run watch:ts",
    "test:ts": "mocha --config test/mocharc.custom.json src/**/*.test.ts",
    "test:package": "mocha test/package --exit",
    "test:unit": "mocha test/unit --exit",
    "test:integration": "mocha test/integration --exit",
    "test": "npm run test:ts && npm run test:package",
    "check": "tsc --noEmit",
    "lint": "eslint --ext .ts,.tsx src/ admin/src/"
  },
  "bugs": {
    "url": "https://github.com/o0shojo0o/ioBroker.adguard/issues"
  },
  "readmeFilename": "README.md"
}
